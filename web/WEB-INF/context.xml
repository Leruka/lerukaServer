<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>PublicHighscore</servlet-name>
        <servlet-class>com.leruka.server.highscore.PublicHighscore</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PublicHighscore</servlet-name>
        <url-pattern>/score</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PrivateHighscore</servlet-name>
        <servlet-class>com.leruka.server.highscore.PrivateHighscore</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PrivateHighscore</servlet-name>
        <url-pattern>/privatescore</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>com.leruka.server.user.Register</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.leruka.server.user.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

</web-app>